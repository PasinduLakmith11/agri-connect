NODE_ENV=development
PORT=5006

# Database
DATABASE_TYPE=sqlite
DATABASE_PATH=./src/database/sqlite.db

# JWT
JWT_SECRET=super-secure-long-32-char-jwt-secret-key-12345
JWT_REFRESH_SECRET=another-secure-32-char-refresh-secret-67890
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=./src/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# SMS (Twilio - Free Trial) - Placeholder
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+94xxxxxxxxx
TWILIO_WEBHOOK_URL=http://localhost:5000/api/webhooks/sms

# Frontend URL
FRONTEND_URL=http://localhost:3006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
